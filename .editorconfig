root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
trim_trailing_whitespace = false

[*.{js,ts}]
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.yaml]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space

